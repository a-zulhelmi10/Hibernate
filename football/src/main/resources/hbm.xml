<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.football.Psg" table = "PsgSquad">
      
      <meta attribute = "class-description">
         This class contains the PSG's player detail. 
      </meta>
      
      <id name = "id" type = "int" column = "id"> </id>
      <property name = "player" column = "playerName" type = "string"/>
      <property name = "position" column = "position" type = "string"/>
      <property name = "salary" column = "salary" type = "double"/>
      <property name = "country" column = "playerCountry" type = "string"/>
   </class>
</hibernate-mapping>